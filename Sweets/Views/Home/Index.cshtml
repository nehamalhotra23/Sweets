@{
    ViewData["Title"] = "Home Page";
}

<h1>Sweets and Treats</h1>
@if (User.Identity.IsAuthenticated)
{
    <p>Hello @User.Identity.Name!</p>
     @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-primary" value="Log out" />        
    }
    <p>@Html.ActionLink("Add new Sweet", "Create", "Sweets")</p>
    <p>@Html.ActionLink("Add new Treat", "Create", "Treat")</p>
   
    
}
else
{
    <p>@Html.ActionLink("Register", "Register", "Account")</p>
    <p>@Html.ActionLink("Log in", "Login", "Account")</p>
}
 